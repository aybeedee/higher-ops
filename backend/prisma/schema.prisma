generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OperationType {
  ADD
  SUB
  MUL
  DIV
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  password   String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  operations Operation[]

  @@index([username])
}

model Operation {
  id         Int            @id @default(autoincrement())
  parentId   Int?
  parent     Operation?     @relation("OperationChildren", fields: [parentId], references: [id])
  children   Operation[]    @relation("OperationChildren")
  userId     Int
  user       User           @relation(fields: [userId], references: [id])
  op         OperationType?
  rightValue Float?
  value      Float
  // materialized path for lookup flexibility; dot separated ids, e.g "100.124.156"
  path       String
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  @@index([path])
  @@index([parentId])
  @@index([userId])
}
